#!/bin/bash
#set -x

echo "fixing up procman.d..."
cd /mnt/mmcblk0p5/etc/
mkdir .hidden
mv procman.d .hidden
mv procman.d-fcc procman.d 

echo "fixing up fonts..."
cd /mnt/mmcblk0p5/usr/lib/fonts
mkdir .hidden
mv * .hidden/
mv .hidden/DejaVu* .

echo "adding 345d and multiplexerd to procman.d"
cd /mnt/mmcblk0p5/etc/
cp .hidden/procman.d/multiplexerd procman.d
cp .hidden/procman.d/345d procman.d
ls procman.d

echo "disabling init.d scripts"
cd /mnt/mmcblk0p5/etc/init.d
mkdir .hidden
mv zwave-program .hidden
mv iod .hidden
mv modemd .hidden
mv roubaix .hidden
mv sundance .hidden

sync
exit 0

