#!/usr/bin/pulseaudio -nF
#
# For use on Wallsly Panel

# Core protocols
#load-module module-simple-protocol-tcp
load-module module-native-protocol-unix
load-module module-cli-protocol-unix
#load-module module-cli-protocol-tcp

# Load the Codec source and sink given the names below
load-module module-alsa-source device=hw:0,0 name=zl380 control='Sout2wav'  channels=1 tsched=0 fixed_latency_range=0 deferred_volume=0
load-module module-alsa-sink   device=hw:0,0 name=zl380 control='Wave' channels=1 tsched=0 fixed_latency_range=0 deferred_volume=0

# Suspend on idle
load-module module-suspend-on-idle

#load-module module-rtp-recv

# Set default sink and source
set-default-sink alsa_output.zl380
set-default-source alsa_input.zl380

# Don't fail if the audio files referred to below don't exist
.nofail

